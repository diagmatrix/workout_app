<html>
    <head>
        {{>header}}
        <style>
            table, th, td {
                text-align:center;
                border-bottom: 1px solid black;
                border-collapse: collapse;
            }
            th, td {
                padding: 3px;
            }
            table {
                margin-left: auto;
                margin-right: auto;
            }
        </style>
    </head>
    <body>
        <section class="row">
            <article class="column" style="width:60%">
                <h1 style="font-size: 20pt;">Exercise stats</h1>
            </article>
            <article class="column" style="width:40%;text-align:right;">
                <a href="/{{name}}" style="color:black;"><i class="fas fa-user-circle fa-4x"></i></a>
            </article>
        </section>
        <form method="post" role="form" style="text-align:center;">
            <div class="form-group">
                <select name="change_exercise" id="change_exercise">
                    <option value="Walking">Walking</option>
                    <option value="Running">Running</option>
                    <option value="Cycling">Cycling</option>
                    <option value="Hiking">Hiking</option>
                    <option value="Jogging">Jogging</option>
                    <option value="Swimming">Swimming</option>
                    <option value="Racewalking">Racewalking</option>
                    <option value="Squat">Squat</option>
                    <option value="Push-Up">Push-Up</option>
                    <option value="Bench Press">Bench Press</option>
                    <option value="Shoulder Press">Shoulder Press</option>
                    <option value="Back Row">Back Row</option>
                    <option value="Deadlift">Deadlift</option>
                    <option value="Pull-up">Pull-up</option>
                    <option value="Cable Crossovers">Cable Crossovers</option>
                    <option value="Bicep Curl">Bicep Curl</option>
                    <option value="Lateral Dumbbell Raises">Lateral Dumbbell Raises</option>
                    <option value="Dumbbell Shrugs">Dumbbell Shrugs</option>
                    <option value="Tricep Curl">Tricep Curl</option>
                    <option value="Leg Press">Leg Press</option>
                    <option value="Chest Press">Chest Press</option>
                    <option value="Incline Press">Incline Press</option>
                    <option value="Dumbbell Chest Flyes">Dumbbell Chest Flyes</option>
                    <option value="Front Dumbbell Raises">Front Dumbbell Raises</option>
                    <option value="Upright Rows">Upright Rows</option>
                    <option value="Leg Extensions">Leg Extensions</option>
                    <option value="Calf Raises">Calf Raises</option>
                    <option value="Row">Row</option>
                    <option value="Hyperextensions">Hyperextensions</option>
                    <option value="Skull-crushers">Skull-crushers</option>
                    <option value="Badminton">Badminton</option>
                    <option value="Padel">Padel</option>
                    <option value="Tennis">Tennis</option>
                    <option value="Voleyball">Voleyball</option>
                    <option value="Basketball">Basketball</option>
                    <option value="Baseball">Baseball</option>
                    <option value="Cricket">Cricket</option>
                    <option value="Surfing">Surfing</option>
                    <option value="Martial arts">Martial arts</option>
                    <option value="Football">Football</option>
                    <option value="Yoga">Yoga</option>
                    <option value="Rugby">Rugby</option>
                    <option value="American Football">American Football</option>
                    <option value="Handball">Handball</option>
                    <option value="Gymnastics">Gymnastics</option>
                    <option value="Hockey">Hockey</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Select exercise" class="button">
            </div>
        </form>
        <section class="row">
            <article class="column" style="width: 50%;">
                <img src={{desc}} height="auto" width="100%">
            </article>
            <article class="column" style="width:50%;">
                <h2 style="text-align:center;">{{exercise}}</h2>
                <table>
                    <tr>
                        <th>Week</th>
                        <th>Record</th>
                    </tr>
                    {{#progress}}
                    <tr>
                        <td>{{week}}</td>
                        <td>{{record}}</td>
                    </tr>
                    {{/progress}}
                </table>
                {{^progress}}
                    <p style="text-align:center;">
                        No stats for this exercise...
                    </p>
                {{/progress}}
            </article>
        </section>
    </body>
    </body>
</html>