<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP&family=Staatliches&display=swap" rel="stylesheet">
<script src="https://kit.fontawesome.com/3a6ae47346.js" crossorigin="anonymous"></script>
<style>
    * {
        box-sizing: border-box;
        font-family: 'Noto Sans JP', sans-serif;
    }
    .column {
        float: left;
        width: 33%;
    }
    
    .row:after {
        content: "";
        display: table;
        clear: both;
    }
    .type-container {
        display: flex;
        flex-flow: column wrap;
        justify-content: space-around;
        padding: 10px;
        margin: 0;
    }
    .ex-box {
        margin-left: 5%;
        margin-right: 5%;
        margin-top: 10px;
        padding: 1em;
    }
    h1 {
        font-family: 'Staatliches', cursive;
    }
    h2 {
        font-family: 'Staatliches', cursive;
    }
    .buttons-container {
        display: flex;
        flex-direction: row;
        justify-content: space-around;
        padding: 0;
        margin: 0;
    }
    .button-box {
        margin-left: 10px;
        margin-right: 10px;
        padding: 1em;
        color: white;
    }
    .button {
        background-color: white;
        color: black;
        border: 2px solid #555555;
        padding: 16px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        transition-duration: 0.4s;
        cursor: pointer;
        border-radius: 999px;
    }
        
    .button:hover {
        background-color: #555555;
        color: white;
    }
</style>
<title>{{title}}</title>